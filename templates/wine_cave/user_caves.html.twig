{% extends 'base.html.twig' %}

{% block title %}The Wine Cellars{% endblock %}

{% block body %}
    <main id="user-caves">
        <h1>All of our Wine Cellars</h1>

        {% if caves is empty %}
            <p>No cellar found.</p>
        {% else %}
            <div class="cave-list">
                {% for cave in caves %}
                    <article class="user-cave">
                        <h2>Cave de {{ cave.user.username }}</h2>
                        <p>Nombre de bouteilles : {{ cave.wine|length }}</p>
                        <a href="{{ path('view_cave', { 'id': cave.id }) }}" class="btn">Voir la cave</a>
                    </article>
                {% endfor %}
            </div>
        {% endif %}
    </main>
{% endblock %}
